<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StatusButton">
        <item name="android:textSize">@dimen/main_status_button_font_size</item>
        <item name="android:layout_width">@dimen/main_status_button_width</item>
        <item name="android:layout_height">@dimen/main_status_button_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
